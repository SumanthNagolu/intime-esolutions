# Guidewire Training Platform Environment Template
# Copy this file to `.env.local` for local development.

# Supabase configuration
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
# Server-only service key (never expose to client code)
SUPABASE_SERVICE_ROLE_KEY=

# OpenAI configuration
OPENAI_API_KEY=

# Application origin (update after deployment)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Reminder automation
REMINDER_CRON_SECRET=
# Optional: required only when deploying the Supabase Edge Function
REMINDER_CRON_TARGET_URL=
REMINDER_THRESHOLD_HOURS=48
REMINDER_MIN_HOURS=24

# Email provider (Resend)
RESEND_API_KEY=
REMINDER_EMAIL_FROM="Guidewire Mentor Team <mentor@example.com>"

